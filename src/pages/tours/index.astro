---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHeader from "../../components/Sections/PageHeader.astro";
import Card from "../../components/UI/Card.astro";
import { getCollection } from "astro:content";
import { formatDate } from "../../utils/dateUtils";

// Get all tours
const allTours = await getCollection("tours", ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort by date (newest first)
const tours = allTours.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Get unique tourTypes and guides for filters
const tourTypes = [...new Set(tours.map(tour => tour.data.tourTypes).filter(Boolean))];
const guides = [...new Set(tours.map(tour => tour.data.guide))];
---

<BaseLayout
  title="Tours - Blue Fox Tours"
  description="Selection of tours we offer, cover a wide variety of subjects, areas and periods of history."
>
  <PageHeader 
    title="Our Tours" 
    subtitle="Established tours ready for you to join, or a bouncing off point for a custom experience."
    backgroundImage="/uploads/tours-header-bg.jpg"
  />
  
  <!-- tours List -->
  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- tours Grid -->
        <div class="lg:col-span-3">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8" id="tours-grid">
            {tours.map((tour) => (
              <Card
                title={tour.data.title}
                image={{
                  src: tour.data.image || "/uploads/tour-placeholder.webp",
                  alt: tour.data.title
                }}
                href={`/tours/${tour.slug}/`}
                className="tour-card"
                data-tourTypes={tour.data.tourTypes || ""}
                data-speaker={tour.data.speaker}
                data-date={tour.data.date.toISOString().slice(0, 10)}
              >
                <div class="mb-3 flex items-center text-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>{formatDate(tour.data.date)}</span>
                </div>
                
                <div class="mb-3 flex items-center text-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span>{tour.data.guide}</span>
                </div>
                
                {tour.data.tourTypes && (
                  <div class="mb-3 flex items-center text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                    <span>tourTypes: {tour.data.tourTypes}</span>
                  </div>
                )}
                
                {tour.data.scripture && (
                  <div class="mb-3 flex items-center text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                    <span>{tour.data.scripture}</span>
                  </div>
                )}
                
                <p class="text-gray-700 mb-4">{tour.data.summary}</p>

                <p class="text-primary-600 font-medium group-hover:underline group-hover:text-primary-700">
                  Learn more â†’
                </p>
              </Card>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
