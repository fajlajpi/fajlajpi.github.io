---
import { getCollection } from "astro:content";

// Footer navigation groups with trailing slashes
const footerNavs = [
  {
    title: "Navigation",
    items: [
      { text: "About", href: "/about/" },
      { text: "Tours", href: "/tours/" },
      { text: "Blog", href: "/blog/" },
      { text: "Tips", href: "/tips/" },
      { text: "FAQ", href: "/faq/" },
      { text: "Contact", href: "/contact/" },
    ],
  },
];

