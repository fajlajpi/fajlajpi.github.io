---
import Button from "../UI/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "Call to Action!",
  subtitle = "Description of the call to action here! Like a HeroSection, but a little smaller and centered.",
  backgroundImage = "/uploads/hero-prg.jpg",
  ctaText = "Primary CTA",
  ctaLink = "/",
  secondaryCtaText = "Secondary CTA",
  secondaryCtaLink = "/",
} = Astro.props;
---

  <section 
    class="py-20 bg-cover bg-center text-white"
    style={`background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(${backgroundImage})`}
  >
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">{title}</h2>
        <p class="text-xl mb-8">{subtitle}</p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <Button href={ctaLink} variant="primary" size="lg">
            {ctaText}
          </Button>
          
          <Button href={secondaryCtaLink} variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
            {secondaryCtaText}
          </Button>
        </div>
      </div>
    </div>
  </section>